{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "AcutisDatabase": ""
  },
  "Authentication": {
    "Jwt": {
      "Issuer": "Acutis.Local",
      "Audience": "Acutis.Client",
      "SigningKey": "local-development-secret-change-me",
      "DefaultLifetime": "01:00:00"
    }
  },
  "Security": {
    "ApiKeys": {
      "Keys": [
        {
          "Name": "LocalDevelopment",
          "Value": "ACUTIS-DEV-KEY",
          "Scopes": ["therapy:read", "therapy:write"]
        }
      ]
    }
  }
}
