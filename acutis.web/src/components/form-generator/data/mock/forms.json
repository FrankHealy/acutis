    {
      "id": "form-therapy-session",
      "name": "Therapy Session Notes",
      "unit": "therapy",
      "admissionType": null,
      "formType": "adhoc",
      "version": "1.0",
      "status": "active",
      "createdAt": "2026-01-17T10:00:00Z",
      "updatedAt": "2026-01-18T08:00:00Z",
      "description": "Ad-hoc therapy session notes form for therapists",
      "steps": [
        {
          "id": "step-1",
          "title": "Session Information",
          "order": 1,
          "sections": [
            {
              "id": "section-session",
              "title": "Session Details",
              "order": 1,
              "fields": [
                {
                  "id": "sessionDate",
                  "type": "date",
                  "label": "Session Date",
                  "required": true
                },
                {
                  "id": "sessionType",
                  "type": "select",
                  "label": "Session Type",
                  "required": true,
                  "options": [
                    { "value": "individual", "label": "Individual Therapy" },
                    { "value": "group", "label": "Group Therapy" },
                    { "value": "family", "label": "Family Session" },
                    { "value": "assessment", "label": "Assessment" }
                  ]
                },
                {
                  "id": "duration",
                  "type": "select",
                  "label": "Duration",
                  "required": true,
                  "options": [
                    { "value": "30", "label": "30 minutes" },
                    { "value": "60", "label": "60 minutes" },
                    { "value": "90", "label": "90 minutes" }
                  ]
                }
              ]
            },
            {
              "id": "section-notes",
              "title": "Session Notes",
              "order": 2,
              "fields": [
                {
                  "id": "presentingIssues",
                  "type": "textarea",
                  "label": "Presenting Issues",
                  "required": true,
                  "rows": 4,
                  "helpText": "Main concerns discussed in this session"
                },
                {
                  "id": "interventions",
                  "type": "textarea",
                  "label": "Interventions Used",
                  "required": true,
                  "rows": 4,
                  "helpText": "Therapeutic techniques and approaches"
                },
                {
                  "id": "progress",
                  "type": "select",
                  "label": "Overall Progress",
                  "required": true,
                  "options": [
                    { "value": "excellent", "label": "Excellent" },
                    { "value": "good", "label": "Good" },
                    { "value": "fair", "label": "Fair" },
                    { "value": "poor", "label": "Poor" },
                    { "value": "concerning", "label": "Concerning" }
                  ]
                },
                {
                  "id": "nextSteps",
                  "type": "textarea",
                  "label": "Next Steps",
                  "required": false,
                  "rows": 3,
                  "helpText": "Homework, goals for next session, etc."
                },
                {
                  "id": "riskAssessment",
                  "type": "radio",
                  "label": "Risk Assessment",
                  "required": true,
                  "options": [
                    { "value": "low", "label": "Low Risk" },
                    { "value": "medium", "label": "Medium Risk - Monitor" },
                    { "value": "high", "label": "High Risk - Immediate action required" }
                  ]
                }
              ]
            }
          ]
        }
      ]
