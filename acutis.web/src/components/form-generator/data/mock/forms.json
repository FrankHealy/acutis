      "id": "form-detox-alcohol",
      "name": "Detox Admission - Alcohol",
      "unit": "detox",
      "admissionType": "alcohol",
      "version": "1.0",
      "status": "active",
      "createdAt": "2026-01-15T10:00:00Z",
      "updatedAt": "2026-01-18T08:00:00Z",
      "description": "Alcohol detox admission form - includes CIWA protocol",
      "steps": [
        {
          "id": "step-1",
          "title": "Personal Information",
          "order": 1,
          "sections": [
            {
              "id": "section-basic",
              "title": "Basic Information",
              "order": 1,
              "fields": [
                {
                  "id": "firstName",
                  "type": "text",
                  "label": "First Name",
                  "required": true
                },
                {
                  "id": "lastName",
                  "type": "text",
                  "label": "Last Name",
                  "required": true
                }
