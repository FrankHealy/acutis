          ]
        },
        {
          "id": "step-2",
          "title": "Alcohol Assessment",
          "order": 2,
          "sections": [
            {
              "id": "section-alcohol",
              "title": "Drinking History",
              "order": 1,
              "fields": [
                {
                  "id": "drinksPerDay",
                  "type": "number",
                  "label": "Average Drinks Per Day",
                  "required": true,
                  "helpText": "In the past 30 days"
                },
                {
                  "id": "lastDrink",
                  "type": "datetime-local",
                  "label": "Last Drink",
                  "required": true
                },
                {
                  "id": "withdrawalHistory",
                  "type": "radio",
                  "label": "Previous Withdrawal Symptoms?",
