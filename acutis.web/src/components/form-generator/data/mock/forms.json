{
  "formConfigurations": [
    {
      "id": "form-detox-alcohol",
      "name": "Detox Admission - Alcohol",
      "unit": "detox",
      "admissionType": "alcohol",
      "version": "1.0",
      "status": "active",
      "createdAt": "2026-01-15T10:00:00Z",
      "updatedAt": "2026-01-18T08:00:00Z",
      "description": "Alcohol detox admission form - includes CIWA protocol",
      "steps": [
        {
          "id": "step-1",
          "title": "Personal Information",
          "order": 1,
          "sections": [
            {
              "id": "section-basic",
              "title": "Basic Information",
              "order": 1,
              "fields": [
                {
                  "id": "firstName",
                  "type": "text",
                  "label": "First Name",
                  "required": true
                },
                {
                  "id": "lastName",
                  "type": "text",
                  "label": "Last Name",
                  "required": true
                }
              ]
            }
          ]
        },
        {
          "id": "step-2",
          "title": "Alcohol Assessment",
          "order": 2,
          "sections": [
            {
              "id": "section-alcohol",
              "title": "Drinking History",
              "order": 1,
              "fields": [
                {
                  "id": "drinksPerDay",
                  "type": "number",
                  "label": "Average Drinks Per Day",
                  "required": true,
                  "helpText": "In the past 30 days"
                },
                {
                  "id": "lastDrink",
                  "type": "datetime-local",
                  "label": "Last Drink",
                  "required": true
                },
                {
                  "id": "withdrawalHistory",
                  "type": "radio",
                  "label": "Previous Withdrawal Symptoms?",
                  "required": true,
                  "options": [
                    { "value": "none", "label": "None" },
                    { "value": "mild", "label": "Mild (tremors, sweating)" },
                    { "value": "severe", "label": "Severe (seizures, DTs)" }
                  ]
                },
                {
                  "id": "ciwaRequired",
                  "type": "checkbox",
                  "label": "CIWA Protocol Required",
                  "required": false,
                  "helpText": "Check if patient requires withdrawal monitoring"
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "id": "form-detox-drugs",
