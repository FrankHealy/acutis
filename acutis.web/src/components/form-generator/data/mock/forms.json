      "description": "Drug addiction detox - includes substance-specific protocols",
      "steps": [
        {
          "id": "step-1",
          "title": "Personal Information",
          "order": 1,
          "sections": [
            {
              "id": "section-basic",
              "title": "Basic Information",
              "order": 1,
              "fields": [
                {
                  "id": "firstName",
                  "type": "text",
                  "label": "First Name",
                  "required": true
                },
                {
                  "id": "lastName",
                  "type": "text",
                  "label": "Last Name",
                  "required": true
                }
              ]
            }
          ]
        },
        {
          "id": "step-2",
          "title": "Substance Assessment",
          "order": 2,
          "sections": [
            {
              "id": "section-drugs",
              "title": "Drug Use History",
              "order": 1,
              "fields": [
                {
                  "id": "primarySubstance",
                  "type": "select",
                  "label": "Primary Substance",
                  "required": true,
                  "options": [
                    { "value": "heroin", "label": "Heroin" },
                    { "value": "cocaine", "label": "Cocaine" },
                    { "value": "methamphetamine", "label": "Methamphetamine" },
                    { "value": "benzodiazepines", "label": "Benzodiazepines" },
                    { "value": "prescription_opioids", "label": "Prescription Opioids" },
                    { "value": "other", "label": "Other" }
                  ]
                },
                {
                  "id": "routeOfAdministration",
                  "type": "select",
                  "label": "Route of Administration",
                  "required": true,
                  "options": [
                    { "value": "oral", "label": "Oral" },
                    { "value": "smoking", "label": "Smoking" },
                    { "value": "snorting", "label": "Snorting" },
                    { "value": "injection", "label": "Injection" }
                  ]
                },
                {
                  "id": "lastUse",
                  "type": "datetime-local",
                  "label": "Last Use",
                  "required": true
                },
                {
                  "id": "substitutionTherapy",
                  "type": "radio",
                  "label": "Interested in Substitution Therapy?",
                  "required": false,
                  "helpText": "E.g., Methadone, Suboxone",
                  "options": [
                    { "value": "yes", "label": "Yes" },
                    { "value": "no", "label": "No" },
                    { "value": "unsure", "label": "Unsure - need more information" }
                  ]
                }
              ]
            }
          ]
        }
      ]
    },
