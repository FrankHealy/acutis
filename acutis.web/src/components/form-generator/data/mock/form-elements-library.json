            "fields": [
              {
                "id": "phone",
                "type": "tel",
                "label": "Phone Number",
                "required": true,
                "placeholder": "087-1234567",
                "validation": {
                  "pattern": "^\\d{3}-\\d{7}$"
                },
                "helpText": "Irish format: 087-1234567"
