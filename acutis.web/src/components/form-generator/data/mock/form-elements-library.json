                "options": [
                  { "value": "1", "label": "1 - Very Poor" },
                  { "value": "2", "label": "2" },
                  { "value": "3", "label": "3" },
                  { "value": "4", "label": "4" },
                  { "value": "5", "label": "5 - Neutral" },
                  { "value": "6", "label": "6" },
                  { "value": "7", "label": "7" },
                  { "value": "8", "label": "8" },
                  { "value": "9", "label": "9" },
                  { "value": "10", "label": "10 - Excellent" }
                ]
              }
            ]
          },
          {
            "id": "element-craving-intensity",
            "name": "Craving Intensity (1-10)",
            "description": "Standard craving intensity scale",
            "fields": [
              {
                "id": "cravingIntensity",
                "type": "select",
                "label": "Craving Intensity",
                "required": true,
                "options": [
                  { "value": "1", "label": "1 - No craving" },
                  { "value": "2", "label": "2" },
                  { "value": "3", "label": "3" },
                  { "value": "4", "label": "4" },
                  { "value": "5", "label": "5 - Moderate" },
                  { "value": "6", "label": "6" },
                  { "value": "7", "label": "7" },
                  { "value": "8", "label": "8" },
                  { "value": "9", "label": "9" },
                  { "value": "10", "label": "10 - Severe" }
                ]
              }
            ]
          },
          {
            "id": "element-risk-assessment",
            "name": "Risk Assessment",
            "description": "Standard risk levels",
            "fields": [
              {
                "id": "riskLevel",
                "type": "radio",
                "label": "Risk Assessment",
                "required": true,
                "options": [
                  { "value": "low", "label": "Low Risk" },
                  { "value": "medium", "label": "Medium Risk - Monitor closely" },
                  { "value": "high", "label": "High Risk - Immediate intervention required" }
                ]
              }
            ]
          },
          {
            "id": "element-sleep-quality",
            "name": "Sleep Assessment",
            "description": "Sleep quality questions",
            "fields": [
              {
                "id": "hoursSlept",
                "type": "number",
                "label": "Hours Slept Last Night",
                "required": true,
                "validation": {
                  "min": 0,
                  "max": 24
                }
              },
              {
                "id": "sleepQuality",
                "type": "select",
                "label": "Sleep Quality",
                "required": true,
                "options": [
                  { "value": "poor", "label": "Poor" },
                  { "value": "fair", "label": "Fair" },
                  { "value": "good", "label": "Good" },
                  { "value": "excellent", "label": "Excellent" }
                ]
              },
              {
                "id": "sleepDisturbances",
                "type": "checkbox",
                "label": "Experienced nightmares or sleep disturbances",
                "required": false
              }
            ]
          }
        ]
      },
      {
