            "fields": [
              {
                "id": "gp.name",
                "type": "text",
                "label": "GP Name",
                "required": false,
                "placeholder": "Dr. ..."
              },
              {
                "id": "gp.practice",
                "type": "text",
                "label": "Practice Name",
                "required": false
              },
              {
                "id": "gp.phone",
                "type": "tel",
                "label": "GP Phone",
                "required": false,
                "placeholder": "021-1234567"
              }
            ]
          }
        ]
      },
      {
        "id": "substance-use",
        "name": "Substance Use",
        "description": "Substance use assessment fields",
        "elements": [
          {
            "id": "element-alcohol-use",
            "name": "Alcohol Use Assessment",
            "description": "Comprehensive alcohol use questions",
            "fields": [
              {
                "id": "drinksPerDay",
                "type": "number",
                "label": "Average Drinks Per Day",
                "required": true,
                "helpText": "In the past 30 days"
              },
              {
                "id": "lastDrink",
                "type": "datetime-local",
                "label": "Last Drink",
                "required": true
              },
              {
                "id": "withdrawalHistory",
                "type": "radio",
                "label": "Previous Withdrawal Symptoms?",
                "required": true,
                "options": [
                  { "value": "none", "label": "None" },
                  { "value": "mild", "label": "Mild (tremors, sweating)" },
                  { "value": "moderate", "label": "Moderate (confusion, hallucinations)" },
                  { "value": "severe", "label": "Severe (seizures, DTs)" }
                ]
              },
              {
                "id": "yearsOfHeavyDrinking",
                "type": "number",
                "label": "Years of Heavy Drinking",
                "required": false,
                "helpText": "Approximate number of years"
              }
            ]
          },
          {
            "id": "element-drug-use",
            "name": "Drug Use Assessment",
            "description": "Comprehensive drug use questions",
            "fields": [
              {
                "id": "primaryDrug",
                "type": "select",
                "label": "Primary Drug",
                "required": true,
                "options": [
                  { "value": "heroin", "label": "Heroin" },
                  { "value": "cocaine", "label": "Cocaine/Crack" },
                  { "value": "methamphetamine", "label": "Methamphetamine" },
                  { "value": "cannabis", "label": "Cannabis" },
                  { "value": "benzodiazepines", "label": "Benzodiazepines" },
                  { "value": "prescription_opioids", "label": "Prescription Opioids" },
                  { "value": "other", "label": "Other" }
                ]
              },
              {
                "id": "routeOfAdministration",
                "type": "select",
                "label": "Route of Administration",
                "required": true,
                "options": [
                  { "value": "oral", "label": "Oral" },
                  { "value": "smoking", "label": "Smoking" },
                  { "value": "snorting", "label": "Snorting" },
                  { "value": "injection", "label": "Injection" }
                ]
              },
              {
                "id": "lastUse",
                "type": "datetime-local",
                "label": "Last Use",
                "required": true
              },
              {
                "id": "frequencyOfUse",
                "type": "select",
                "label": "Frequency of Use",
                "required": true,
                "options": [
                  { "value": "multiple_daily", "label": "Multiple times per day" },
                  { "value": "daily", "label": "Daily" },
                  { "value": "several_weekly", "label": "Several times per week" },
                  { "value": "weekly", "label": "Weekly" },
                  { "value": "occasionally", "label": "Occasionally" }
                ]
              }
            ]
          },
          {
            "id": "element-gambling-assessment",
            "name": "Gambling Assessment",
            "description": "Gambling addiction questions",
            "fields": [
              {
                "id": "gamblingTypes",
                "type": "select",
                "label": "Primary Type of Gambling",
                "required": true,
                "options": [
                  { "value": "online", "label": "Online Gambling" },
                  { "value": "betting_shops", "label": "Betting Shops" },
                  { "value": "casino", "label": "Casino" },
                  { "value": "horses", "label": "Horse Racing" },
                  { "value": "lottery", "label": "Lottery/Scratch Cards" },
                  { "value": "multiple", "label": "Multiple Types" }
                ]
              },
              {
                "id": "lastGamble",
                "type": "datetime-local",
                "label": "Last Time Gambled",
                "required": true
              },
              {
                "id": "financialImpact",
                "type": "select",
                "label": "Financial Impact",
                "required": true,
                "options": [
                  { "value": "minimal", "label": "Minimal - Under control" },
                  { "value": "moderate", "label": "Moderate - Some debt" },
                  { "value": "severe", "label": "Severe - Significant debt" },
                  { "value": "critical", "label": "Critical - Bankruptcy/Legal issues" }
                ]
              }
            ]
          },
          {
            "id": "element-previous-treatment",
            "name": "Treatment History",
            "description": "Previous treatment attempts",
            "fields": [
              {
                "id": "previousTreatment",
                "type": "radio",
                "label": "Previous Treatment?",
                "required": true,
                "options": [
                  { "value": "yes", "label": "Yes" },
                  { "value": "no", "label": "No" }
                ]
              },
              {
                "id": "previousTreatmentDetails",
                "type": "textarea",
                "label": "Previous Treatment Details",
                "required": false,
                "dependsOn": "previousTreatment",
                "rows": 4,
                "placeholder": "When, where, outcome, length of sobriety achieved..."
              }
            ]
          }
        ]
      },
      {
        "id": "assessments",
        "name": "Assessment Scales",
        "description": "Standard assessment and rating scales",
