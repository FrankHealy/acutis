            "id": "element-name-basic",
            "name": "Basic Name",
            "description": "First and Last name fields",
            "fields": [
              {
                "id": "firstName",
                "type": "text",
                "label": "First Name",
                "required": true,
                "placeholder": "Enter first name",
                "validation": {
                  "minLength": 2,
                  "maxLength": 50
                }
              },
              {
                "id": "lastName",
                "type": "text",
                "label": "Last Name",
                "required": true,
                "placeholder": "Enter last name",
                "validation": {
                  "minLength": 2,
                  "maxLength": 50
                }
              }
            ]
