            "fields": [
              {
                "id": "gpSharingConsent",
                "type": "checkbox",
                "label": "I consent to sharing information with my GP",
                "required": false,
                "helpText": "Optional - helps coordinate ongoing care"
              }
            ]
          }
        ]
      },
      {
        "id": "therapy",
        "name": "Therapy & Sessions",
        "description": "Common therapy session fields",
        "elements": [
          {
            "id": "element-session-details",
            "name": "Session Details",
            "description": "Basic session information",
            "fields": [
              {
                "id": "sessionDate",
                "type": "date",
                "label": "Session Date",
                "required": true
              },
              {
                "id": "sessionType",
                "type": "select",
                "label": "Session Type",
                "required": true,
                "options": [
                  { "value": "individual", "label": "Individual Therapy" },
                  { "value": "group", "label": "Group Therapy" },
                  { "value": "family", "label": "Family Session" },
                  { "value": "crisis", "label": "Crisis Intervention" },
                  { "value": "assessment", "label": "Assessment" }
                ]
              },
              {
                "id": "duration",
                "type": "select",
                "label": "Duration",
                "required": true,
                "options": [
                  { "value": "30", "label": "30 minutes" },
                  { "value": "45", "label": "45 minutes" },
                  { "value": "60", "label": "60 minutes" },
                  { "value": "90", "label": "90 minutes" }
                ]
              }
            ]
          },
          {
            "id": "element-session-notes",
            "name": "Session Notes",
            "description": "Comprehensive session documentation",
            "fields": [
              {
                "id": "presentingIssues",
                "type": "textarea",
                "label": "Presenting Issues",
                "required": true,
                "rows": 4,
                "placeholder": "Main concerns discussed in this session"
              },
              {
                "id": "interventions",
                "type": "textarea",
                "label": "Interventions Used",
                "required": true,
                "rows": 4,
                "placeholder": "Therapeutic techniques and approaches used"
              },
              {
                "id": "clientResponse",
                "type": "textarea",
                "label": "Client Response",
                "required": false,
                "rows": 3,
                "placeholder": "How did the client respond to interventions?"
              },
              {
                "id": "nextSteps",
                "type": "textarea",
                "label": "Next Steps",
                "required": false,
                "rows": 3,
                "placeholder": "Homework, goals for next session, action items"
              }
            ]
          },
          {
            "id": "element-progress-rating",
            "name": "Progress Rating",
            "description": "Session progress assessment",
            "fields": [
              {
                "id": "progressRating",
                "type": "select",
                "label": "Overall Progress",
                "required": true,
                "options": [
                  { "value": "excellent", "label": "Excellent - Significant progress" },
                  { "value": "good", "label": "Good - Clear progress" },
                  { "value": "fair", "label": "Fair - Some progress" },
                  { "value": "poor", "label": "Poor - Minimal progress" },
                  { "value": "concerning", "label": "Concerning - Regression" }
                ]
              }
            ]
          }
        ]
      }
    ],
    "customElements": []
  }
